#! /usr/bin/php
<?php
define('DEBUG', 'on');
define('WEBPATH', __DIR__);

require realpath(__DIR__.'/../../../..').'/framework/libs/lib_config.php';

$setting['worker_num'] = 1;
$setting['task_worker_num'] = 1;
$setting['daemonize'] = false;
$setting['pid_file'] = __DIR__.'/mostats_svr.pid';
$setting['worker_dump_file'] = __DIR__.'/dump/worker';
$setting['task_dump_file'] = __DIR__.'/dump/task';
$svr = new App\StatsCenterSvr();
$svr->setLogger(new Swoole\Log\FileLog(__DIR__.'/../../log/mostat_server.log'));
//$svr->setLogger(new Swoole\Log\EchoLog(array('display'=>1)));
$svr->run($setting);
